        </xs:sequence>
    </xs:complexType>

    <!--
        Root element of document
    -->
    <xs:element name="Offers">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="Offer" minOccurs="1" maxOccurs="unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="Id" type="xs:int" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="OfferName" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="SubHeadline" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="Description" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="Categories" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="Category" type="xs:string" minOccurs="1"
                                                    maxOccurs="unbounded"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="ConversionMode" minOccurs="1" maxOccurs="1">
                                <xs:simpleType>
                                    <xs:restriction base="xs:string">
                                        <xs:enumeration value="CPC"/>
                                        <xs:enumeration value="CPI"/>
                                        <xs:enumeration value="CPA"/>
                                        <xs:enumeration value="CPA"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="ConversionUserFlow" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="Restrictions" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="Notes" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="AndroidPackageName" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="iOSBundleID" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="AdultTraffic" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="IncentiveAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="MediabuyerAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="KeyworderAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="PushAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="ApplicationTrafficAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="PublisherValidationAutomatic" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="AllowedUseOwnCreative" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="AllowedCustomizeBannerTarget" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="EachCreativeMustHaveDifferentLink" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="ApprovalRequired" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="NeedAcceptTerms" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="AllowedWiFi" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="Allowed3G" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="MinimalAge" minOccurs="1" maxOccurs="1">
                                <xs:simpleType>
                                    <xs:restriction base="xs:int">
                                        <xs:minInclusive value="0"/>
                                    </xs:restriction>
                                </xs:simpleType>
                            </xs:element>
                            <xs:element name="RebrokerAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="SMSAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="DiscoveryAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="EmailingAllowed" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="BannersURL" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="TargetURL" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="ThumbnailURL" type="xs:string" minOccurs="1" maxOccurs="1"/>
                            <xs:element name="Android" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="AndroidMinimalVersion" type="xs:string" minOccurs="1" maxOccurs="1"/>
                                        <xs:element name="AndroidMaximalVersion" type="xs:string" minOccurs="1" maxOccurs="1"/>
                                        <xs:element name="isAPK" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="iOS" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="iOSMinimalVersion" type="xs:string" minOccurs="1" maxOccurs="1"/>
                                        <xs:element name="iOSMaximalVersion" type="xs:string" minOccurs="1" maxOccurs="1"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="WindowsPhone" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="WindowsPhoneMinimalVersion" type="xs:string" minOccurs="1" maxOccurs="1"/>
                                        <xs:element name="WindowsPhoneMaximalVersion" type="xs:string" minOccurs="1" maxOccurs="1"/>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="OfferTargets" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="OfferTarget" minOccurs="1" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="AndroidPreviewURL" type="xs:string" minOccurs="0" maxOccurs="1"/>
                                                    <xs:element name="iPadPreviewURL" type="xs:string" minOccurs="0" maxOccurs="1"/>
                                                    <xs:element name="iPhonePreviewURL" type="xs:string" minOccurs="0" maxOccurs="1"/>
                                                    <xs:element name="iPodPreviewURL" type="xs:string" minOccurs="0" maxOccurs="1"/>
                                                    <xs:element name="OtherPreviewURL" type="xs:string" minOccurs="0" maxOccurs="1"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="OfferPayouts" minOccurs="1" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="OfferPayout" minOccurs="1" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="Payout" type="xs:double" minOccurs="1" maxOccurs="1"/>
                                                    <xs:element name="Countries" type="CountryList" minOccurs="1" maxOccurs="1"/>
                                                    <xs:element name="Platforms" type="PlatformList" minOccurs="1" maxOccurs="1"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                            <xs:element name="OfferCaps">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="NoDailyCap" type="NumericBoolean" minOccurs="1" maxOccurs="1"/>
                                        <xs:element name="TotalCapLimit" type="xs:int" minOccurs="0" maxOccurs="1"/>
                                        <xs:element name="CountryPlatformSet" minOccurs="0" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:sequence>
                                                    <xs:element name="Countries" type="CountryList" minOccurs="1" maxOccurs="1"/>
                                                    <xs:element name="Platforms" type="PlatformList" minOccurs="1" maxOccurs="1"/>
                                                    <xs:element name="DailyCap" type="xs:int" minOccurs="1" maxOccurs="1"/>
                                                </xs:sequence>
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>